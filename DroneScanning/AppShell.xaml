<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DroneScanning.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DroneScanning"
    xmlns:viewslayout="clr-namespace:DroneScanning.View.Layout"
    xmlns:viewspages="clr-namespace:DroneScanning.View.Pages"
    BackgroundColor="#005780"
    Title="DroneScanning">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate viewslayout:LoginLayout}"
        FlyoutItemIsVisible="False"
        Shell.FlyoutBehavior="Disabled"
        Route="MainPage" />

    <FlyoutItem Route="HomePage" FlyoutDisplayOptions="AsMultipleItems">
        <Tab Title="Inicio" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate viewspages:HomePage}"/>
        </Tab>
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <StackLayout Padding="20">
            <Button Text="Sign out" Command="{Binding SignOutCommand}" BackgroundColor="#009B5C"/>
        </StackLayout>
    </Shell.FlyoutFooter>

</Shell>
